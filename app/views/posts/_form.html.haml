= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :author_id
    %br/
    = f.select :author_id, @authors, :prompt => 'Select'
  .actions
    = f.submit
:javascript
  $(document).ready(function(){})